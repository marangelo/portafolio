---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title = "Projects" sideBarActiveItemID="projects">
  <div>
    <div class="text-3xl w-full font-bold mb-5">Projects Header</div>
  </div>

  <HorizontalCard
    title="Credinstante"
    img="/app-01.png"
    desc="Manages the portfolio of loans and the corresponding payments applied to these loans."
    url="http://app.credinstantes.com/"
    badge="NEW"
    tech={['HTML', 'BOOSTRAP', 'LARAVEL','MYSQL']}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="GUMANET Analyst FrontEnd and BackEnd Develope"
    img="/app-02.png"
    desc="Various dashboards that display relevant information for operational decision-making."
    url="https://gnet.gumacorp.com"
    tech={['HTML', 'BOOSTRAP', 'LARAVEL','MYSQL','SQLSERVER','DOCKER']}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="SAC Systems FrontEnd and BackEnd Developer"
    img="/app-03.png"
    desc="Platform for customer service, where orders are received and access is provided to inventory, customers, and other statistics."
    url="https://sac.gumacorp.com"
    tech={['HTML', 'BOOSTRAP', 'LARAVEL','MYSQL','SQLSERVER','DOCKER']}
  />

  <HorizontalCard
    title="GMV Gestor Movil de Ventas"
    img="/app-10.png"
    desc="Through a Navita App on Android, the pre-sale order is sent to a WEB portal."
    url="https://apps.gumacorp.com/gmv3"
    tech={['ANDROID', 'JAVA', 'PHP','MYSQL','SQLSERVER','DOCKER']}
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Projects with Docker </div>
  </div>

  <HorizontalCard
    title="Private Cloud with Docker"
    img="/app-04.png"
    desc="A solution to provide user information access across different areas of the company."
    url="https://cloud.gumacorp.com"
    tech={['DOCKER COMPOSE', 'UBUNTU SERVER', 'NEXT CLOUD', 'MARIADB']}
  />

  <HorizontalCard
    title="Mobile Project Documentation"
    img="/app-05.png"
    desc="Manual for users of the internal mobile application and its various modules."
    url="https://docs.gumacorp.com/"
    tech={['DOCKER COMPOSE', 'UBUNTU SERVER', 'WIKIJS']}
  />

  <HorizontalCard
    title="Media Center"
    img="/app-06.png"
    desc="My private Multimedia server, for storing movies and series and watching them through various means."
    url="http://tv.endscom.com"
    tech={['DOCKER COMPOSE', 'UBUNTU SERVER', 'JELLYFIN']}
  />


  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Others Projects</div>
  </div>

 
  <HorizontalCard
    title="Production Metrics"
    img="/app-07.png"
    desc="Provides different metrics for the internal production of the company, from production orders to costs."
    url="https://apps.gumacorp.com/production/"
    tech={['HTML', 'BOOTSTRAP', 'LARAVEL', 'MYSQL', 'SQLSERVER', 'DOCKER']}
  />

  <div class="divider my-0"></div>

  <HorizontalCard
    title="Inventory Management (Kardex)"
    img="/app-08.png"
    desc="Manages the inventory of items, their entries, and exits directly from the production line."
    url="https://apps.gumacorp.com/inventory/"
    tech={['HTML', 'BOOTSTRAP', 'LARAVEL', 'MYSQL', 'DOCKER']}
  />

  <div class="divider my-0"></div>

  <HorizontalCard
    title="General Statistics"
    img="/app-09.png"
    desc="Provides sales metrics for different sales teams within the company."
    url="https://apps.gumacorp.com/statistics/"
    tech={['HTML', 'BOOTSTRAP', 'LARAVEL', 'MYSQL', 'SQLSERVER', 'DOCKER']}
  />

</BaseLayout>
